#include <opencv2/opencv.hpp>
#include <opencv2/highgui.hpp>
#include <iostream>

int main(int argc, char** argv) {
	bool transmisja = true;
	cv::VideoCapture cap(0);
	if (!cap.isOpened()) {
		std::cerr << "error opening frames source" << std::endl;
		return -1;
	}
	std::cout << "Video size: " << cap.get(cv::CAP_PROP_FRAME_WIDTH)
		<< "x" << cap.get(cv::CAP_PROP_FRAME_HEIGHT) << std::endl;
	do {
		cv::Mat obraz;
		cv::Mat obraz2;
		if (cap.read(obraz)) {
			cv::flip(obraz, obraz, +1);

			cv::imshow("Okienko1", obraz);
			cv::imshow("Okienko2", obraz2);
		}
		else {
			transmisja = false;
		}
		if ((cv::waitKey(1000.0 / 60.0) & 0x0ff) == 27) transmisja = false;
	} while (transmisja);
	return 0;
}
